<Window x:Class="KioscoApp.Views.VentaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KioscoApp.ViewModels"
        Title="Ventas" Height="400" Width="600">
    <Window.DataContext>
        <vm:VentaViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="200" Text="{Binding CodigoBusqueda, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0"/>
            <Button Content="Buscar" Command="{Binding BuscarProductoCommand}" Width="80" Margin="0,0,10,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Producto seleccionado:" FontWeight="Bold"/>
            <TextBlock Text="{Binding ProductoSeleccionado.Nombre}"/>
            <TextBlock Text="{Binding ProductoSeleccionado.PrecioVenta, StringFormat='Precio: {0:C}'}"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Cantidad:" VerticalAlignment="Center"/>
                <TextBox Width="50" Text="{Binding CantidadSeleccionada}" Margin="5,0"/>
                <Button Content="Agregar al carrito" Command="{Binding AgregarAlCarritoCommand}" Margin="10,0"/>
            </StackPanel>
        </StackPanel>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Carrito}" AutoGenerateColumns="False" Height="150" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto" Binding="{Binding Producto.Nombre}" />
                <DataGridTextColumn Header="Precio" Binding="{Binding Producto.PrecioVenta, StringFormat=C}" />
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" />
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" Text="{Binding TotalVenta, StringFormat='Total: {0:C}'}" 
                   HorizontalAlignment="Right" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
    </Grid>
</Window>
