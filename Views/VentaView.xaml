<Window x:Class="KioscoApp.Views.VentaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Venta" Height="500" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <!-- Formulario -->
            <ColumnDefinition Width="*"/>
            <!-- Tabla -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Columna izquierda: Formulario -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <!-- Buscar producto -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Código de Barras:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding CodigoBusqueda}" Width="120" Margin="5,0"/>
                <Button Content="Buscar" Command="{Binding BuscarProductoCommand}" Margin="5,0"/>
            </StackPanel>

            <!-- Detalles producto seleccionado -->
            <Label Content="Producto Seleccionado:"/>
            <TextBlock Text="{Binding ProductoSeleccionado.Nombre}" FontWeight="Bold"/>
            <TextBlock Text="Precio:"/>
            <TextBlock Text="{Binding ProductoSeleccionado.PrecioVenta}"/>
            <TextBlock Text="Stock Disponible:"/>
            <TextBlock Text="{Binding ProductoSeleccionado.Stock}"/>

            <Label Content="Cantidad:"/>
            <TextBox Text="{Binding CantidadVenta}" Width="50"/>

            <Label Content="Método de Pago:"/>
            <ComboBox SelectedValue="{Binding MetodoPago}" SelectedValuePath="Content">
                <ComboBoxItem Content="Efectivo"/>
                <ComboBoxItem Content="POS"/>
            </ComboBox>

            <Button Content="Registrar Venta"
                    Command="{Binding RegistrarVentaCommand}"
                    Margin="0,10"/>
        </StackPanel>

        <!-- Columna derecha: Tabla de ventas -->
        <DataGrid Grid.Column="1"
                  ItemsSource="{Binding VentasRealizadas}"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"/>
    </Grid>
</Window>
