<Window x:Class="KioscoApp.Views.ProveedoresView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Proveedores" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Formulario de Proveedor -->
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Nombre"/>
            <TextBox Name="NombreTextBox" Margin="0,5"/>

            <TextBlock Text="CUIT"/>
            <TextBox Name="CuitTextBox" Margin="0,5"/>

            <TextBlock Text="Contacto"/>
            <TextBox Name="ContactoTextBox" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Content="Guardar" Click="Guardar_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Editar" Click="Editar_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="Eliminar" Click="Eliminar_Click" Width="100"/>
            </StackPanel>
        </StackPanel>

        <!-- Tabla de Proveedores -->
        <DataGrid x:Name="ProveedoresDataGrid" Grid.Row="1"
                  AutoGenerateColumns="True" IsReadOnly="True"
                  SelectionChanged="ProveedoresDataGrid_SelectionChanged"/>
    </Grid>
</Window>
