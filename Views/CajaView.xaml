<Window x:Class="KioscoApp.Views.CajaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Caja" Height="500" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Total -->
            <RowDefinition Height="*"/>
            <!-- Tabla -->
        </Grid.RowDefinitions>

        <!-- Formulario agregar movimiento -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Descripción:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Descripcion}" Width="200" Margin="5,0"/>
            <Label Content="Monto:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Monto}" Width="100" Margin="5,0"/>

            <Button Content="Agregar Ingreso" Command="{Binding AgregarIngresoCommand}" Margin="5,0"/>
            <Button Content="Agregar Gasto" Command="{Binding AgregarGastoCommand}" Margin="5,0"/>
        </StackPanel>

        <!-- Total caja -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Total en Caja:" FontWeight="Bold"/>
            <TextBlock Text="{Binding TotalCaja}" FontWeight="Bold" Margin="5,0"/>
        </StackPanel>

        <!-- Historial -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding MovimientosCaja}"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"/>
    </Grid>
</Window>
