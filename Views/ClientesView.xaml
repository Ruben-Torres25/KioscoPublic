<Window x:Class="KioscoApp.Views.ClientesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Clientes" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Formulario -->
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Nombre"/>
            <TextBox Name="NombreTextBox" Margin="0,5"/>

            <TextBlock Text="CUIT/CUIL"/>
            <TextBox Name="CuitTextBox" Margin="0,5"/>

            <TextBlock Text="Dirección"/>
            <TextBox Name="DireccionTextBox" Margin="0,5"/>

            <TextBlock Text="Condición Fiscal"/>
            <TextBox Name="CondicionFiscalTextBox" Margin="0,5"/>

            <Button Content="Guardar Cliente" Click="GuardarCliente_Click" Margin="0,5"/>
            <Button Content="Editar Cliente" Click="EditarCliente_Click" Margin="0,5"/>
            <Button Content="Eliminar Cliente" Click="EliminarCliente_Click" Margin="0,5"/>

        </StackPanel>

        <!-- Tabla -->
        <DataGrid x:Name="ClientesDataGrid"
          Grid.Row="1"
          AutoGenerateColumns="True"
          IsReadOnly="True"
          SelectionChanged="ClientesDataGrid_SelectionChanged"/>

    </Grid>
</Window>
