<Window x:Class="KioscoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KioscoApp" Height="700" Width="900">

    <Grid Margin="10">
        <!-- Estructura principal: barra superior + contenido principal -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Barra de navegación -->
            <RowDefinition Height="*"/>
            <!-- Contenido principal -->
        </Grid.RowDefinitions>

        <!-- Barra de navegación superior -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Abrir Ventas"
                    Click="AbrirVentas_Click"
                    Width="120"
                    Height="30"
                    Margin="0,0,10,0"/>

            <Button Content="Abrir Caja"
                    Click="AbrirCaja_Click"
                    Width="120"
                    Height="30"
                    Margin="0,0,10,0"/>

            <Button Content="Clientes"
                    Click="AbrirClientes_Click"
                    Width="120"
                    Height="30"
                    Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Contenido principal: CRUD Productos -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Formulario -->
                <RowDefinition Height="*"/>
                <!-- Tabla de productos -->
            </Grid.RowDefinitions>

            <!-- Formulario Productos -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="Código de Barras"/>
                <TextBox Name="CodigoBarrasTextBox" Margin="0,5"/>

                <TextBlock Text="Nombre"/>
                <TextBox Name="NombreTextBox" Margin="0,5"/>

                <TextBlock Text="Descripción"/>
                <TextBox Name="DescripcionTextBox" Margin="0,5"/>

                <TextBlock Text="Precio Compra"/>
                <TextBox Name="PrecioCompraTextBox" Margin="0,5"/>

                <TextBlock Text="Precio Venta"/>
                <TextBox Name="PrecioVentaTextBox" Margin="0,5"/>

                <TextBlock Text="Stock"/>
                <TextBox Name="StockTextBox" Margin="0,5"/>

                <TextBlock Text="Categoría"/>
                <TextBox Name="CategoriaTextBox" Margin="0,5"/>

                <Button Content="Guardar Producto"
                        Command="{Binding GuardarCommand}"
                        Margin="0,10"/>
            </StackPanel>

            <!-- Tabla Productos -->
            <DataGrid x:Name="ProductosDataGrid"
                      Grid.Row="1"
                      ItemsSource="{Binding Productos}"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"/>
        </Grid>
    </Grid>
</Window>
