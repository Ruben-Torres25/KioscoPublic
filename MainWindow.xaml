<Window x:Class="KioscoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KioscoApp" Height="700" Width="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Búsqueda -->
            <RowDefinition Height="*"/>
            <!-- Tabla -->
        </Grid.RowDefinitions>

        <!-- Formulario organizado en Grid -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                <Label Content="Código de Barras"/>
                <TextBox Text="{Binding ProductoActual.CodigoBarras}" Margin="0,5"/>

                <Label Content="Nombre"/>
                <TextBox Text="{Binding ProductoActual.Nombre}" Margin="0,5"/>

                <Label Content="Descripción"/>
                <TextBox Text="{Binding ProductoActual.Descripcion}" Margin="0,5"/>

                <Label Content="Precio Compra"/>
                <TextBox Text="{Binding ProductoActual.PrecioCompra}" Margin="0,5"/>

                <Label Content="Precio Venta"/>
                <TextBox Text="{Binding ProductoActual.PrecioVenta}" Margin="0,5"/>

                <Label Content="Stock"/>
                <TextBox Text="{Binding ProductoActual.Stock}" Margin="0,5"/>

                <Label Content="Categoría"/>
                <TextBox Text="{Binding ProductoActual.Categoria}" Margin="0,5"/>

                <Button Content="Guardar Producto"
                        Command="{Binding GuardarCommand}"
                        Margin="0,10"/>
            </StackPanel>
        </Grid>

        <!-- Barra de búsqueda -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Label Content="Buscar:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding TerminoBusqueda, UpdateSourceTrigger=PropertyChanged}" Width="200" Margin="5,0"/>
            <Button Content="Buscar" Command="{Binding BuscarCommand}" Margin="5,0"/>
            <Button Content="Limpiar" Command="{Binding LimpiarBusquedaCommand}" Margin="5,0"/>
        </StackPanel>

        <!-- Tabla de Productos -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Productos}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Código de Barras" Binding="{Binding CodigoBarras}"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}"/>
                <DataGridTextColumn Header="Precio Compra" Binding="{Binding PrecioCompra}"/>
                <DataGridTextColumn Header="Precio Venta" Binding="{Binding PrecioVenta}"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}"/>

                <!-- Acciones -->
                <DataGridTemplateColumn Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Editar"
                                        Command="{Binding DataContext.EditarCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Margin="2"/>
                                <Button Content="Eliminar"
                                        Command="{Binding DataContext.EliminarCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
