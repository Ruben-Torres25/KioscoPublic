<Window x:Class="KioscoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KioscoApp" Height="700" Width="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Formulario -->
            <RowDefinition Height="Auto"/>
            <!-- Búsqueda -->
            <RowDefinition Height="*"/>
            <!-- Tabla -->
        </Grid.RowDefinitions>

        <!-- Formulario organizado en Grid -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                <Label Content="Código de Barras"/>
                <TextBox Name="CodigoBarrasTextBox" Margin="0,5"/>

                <Label Content="Nombre"/>
                <TextBox Name="NombreTextBox" Margin="0,5"/>

                <Label Content="Descripción"/>
                <TextBox Name="DescripcionTextBox" Margin="0,5"/>

                <Label Content="Precio Compra"/>
                <TextBox Name="PrecioCompraTextBox" Margin="0,5"/>

                <Label Content="Precio Venta"/>
                <TextBox Name="PrecioVentaTextBox" Margin="0,5"/>

                <Label Content="Stock"/>
                <TextBox Name="StockTextBox" Margin="0,5"/>

                <Label Content="Categoría"/>
                <TextBox Name="CategoriaTextBox" Margin="0,5"/>

                <Button Content="Guardar Producto" Click="GuardarProducto_Click" Margin="0,10"/>
            </StackPanel>
        </Grid>

        <!-- Barra de búsqueda alineada -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Label Content="Buscar:" VerticalAlignment="Center"/>
            <TextBox x:Name="BuscarTextBox" Width="200" Margin="5,0"/>
            <Button Content="Buscar" Click="Buscar_Click" Margin="5,0"/>
            <Button Content="Limpiar" Click="LimpiarBusqueda_Click" Margin="5,0"/>
        </StackPanel>

        <!-- Tabla de Productos -->
        <DataGrid x:Name="ProductosDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Código de Barras" Binding="{Binding CodigoBarras}"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>
                <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}"/>
                <DataGridTextColumn Header="Precio Compra" Binding="{Binding PrecioCompra}"/>
                <DataGridTextColumn Header="Precio Venta" Binding="{Binding PrecioVenta}"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding Categoria}"/>

                <DataGridTemplateColumn Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Editar" Click="EditarProducto_Click" Margin="2"/>
                                <Button Content="Eliminar" Click="EliminarProducto_Click" Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
